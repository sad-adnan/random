<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/randomStringTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random String : "
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/randomIntTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Integer : "
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/randomFloatTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Float : "
        android:textSize="20sp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/randomDoubleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Double : "
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/generateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

</LinearLayout>